{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals"],
    "paths": {
      "~/testing-utils": ["../react/vitest/utils.ts"],
      "@/dataconnect/*": ["../../dataconnect-sdk/js/*"]
    }
  },
  "include": ["src", "utils.tsx", "./package.json"]
}
