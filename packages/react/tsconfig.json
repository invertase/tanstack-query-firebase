{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals"],
    "paths": {
      "~/testing-utils": ["../../vitest/utils.ts"],
      "@/dataconnect/*": ["../../dataconnect-sdk/js/*"]
    }
  },
  "include": ["src", "utils.tsx"]
}
