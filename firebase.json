    "firestore": {
      "port": 8080
    },
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "database": {
      "port": 9000
    },
    "dataconnect": {
      "port": 9399,
      "host": "127.0.0.1"
