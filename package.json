    "@tanstack/react-query": "^5.55.4",
    "@types/jsonwebtoken": "^9.0.7",
    "@vitest/coverage-istanbul": "^2.0.5",
    "firebase": "^11.3.0",
    "happy-dom": "^15.7.3",
    "jsonwebtoken": "^9.0.2",
    "react": "^19.0.0",
    "tsup": "^8.2.4",
    "turbo": "^2.5.3",
    "typescript": "^5.6.2",
    "vitest": "^2.0.5"
  },
  "dependencies": {
    "@angular/fire": "^19.0.0"
